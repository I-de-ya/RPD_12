/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_directory . 
*/

html {
	background: #EBE5ED;
	font-family: Verdana, Helvetica, Arial, sans-serif;
	padding:0 0.5em 0 0.5em;
	font-size:11pt;
}

header {
	color: white;
	height:200px;

}

header input[type="text"] {
	width: 150px;
}

header input[type="password"] {
	width: 150px;
}

header a{
	text-decoration:none;	
}

header .email {
	float:right;
	margin:10.5em 2em 0 0;
	color: #24043A;
}

header .email a{
	color: #E40045;
}

hr.menu_line {
	height: 0px;
}

p.notice {
	color:#24043A;
}
.maintitle {
	text-align:center;
	margin-top:0;
	color: black;

}
.top_panel {
	text-align: right;
	font-size:10pt;
}

.top_panel .top_menu {
	padding:0.5em 1.7em 0 0;
}

.top_panel .form {
	padding:0.2em 1.7em 0 0;
}


left_bar {
	float: left;
	width: 19em;
}

.content {
	margin-left:20em;
	background: white;
	min-height:30em;
	padding: 0.3em 0.3em 0.3em 0.3em; 
	border-left: solid 1px;
}

p.date {
	text-align:left;
}

.title {
	text-align:center;
	color:#24043A;
	background: white;
	margin: 0.7em 1em 0.7em 1em;
}
.status_panel {
	background:#24043A;
	border-top: solid black 1px;
	border-bottom: solid black 1px;
	text-align:center;
	color:#EBE5ED;
	padding: 0.4em;

}

.status_panel .red{
	color:#E40045;
	text-decoration:none;
}

.status_panel .green{
	color:#20f120;
	text-decoration:none;
}
.status_panel .red:hover{
	color:#E40045;
	text-decoration:underline;
}

.status_panel .green:hover{
	color:#20f120;
	text-decoration:underline;
}
.main {
	margin: 1em 1em 1em 1em;
}
footer {
	border-top:solid 1px black;
	background:white;
	clear:both;
	text-align:right;
	padding: 0.4em 1em 0.4em 1em;
}
/* Top panel navigation */

.top_panel a:link{
	color: white;
}

.top_panel a:visited{
	color: white;
}

.top_panel a:hover{
	color: #DCCCF7;
}
 /* end:Top panel navigation */

 /* Navigation */

.nav {
	margin-left:1em;
	margin-top:15px;
	width:18em;
	text-align:left;
}

.nav ul{
	margin:0;
	padding:0;
}
.nav li{
	color: white;
	list-style-type:none;
	padding:0.3em 0 0.3em 0.3em;
	width:18em;
}
.nav li a{
	display: block;
	text-decoration:none;	
	font-size:10pt;
}

.nav li.indention{
	padding:0.7em 0 0.3em 2em;
}

.nav li a:link{
	color: white;
}

.nav li a:visited{
	color: white;
}

.nav li a:hover{
	color: #DCCCF7;
}

 /* end:Navigation */

 /* Content */


.content a{
	text-decoration:none;
	font-weight:bold;
	color: black;
	border-bottom: 1px black dashed;
}

.content a:link{
}

.content a:visited{
}

.content a:hover{
	border-bottom: 1px solid;
}

/* end:Content */

/* News_box */
.news_box{
	background: #EBE5ED;
	border:1px solid black;
	height:auto;
	min-height: 229px;

}

.news_box .image{
	width: 299px;
	height: 229px;
	background-image: url(<%= asset_data_uri 'bmstu_building.jpg' %>);
	float:right;
	border-left:solid 1px black;
}

.news_box .news{
	margin:2px 20px;
	max-width:329px;
}

.news_box .news h3{
	text-align:center;
}

/* end:News_box */

.top_panel input{
	background:#24043A;
	border:solid 1px white;
	color:white;
}
.top_panel input:hover{
	background:#24043A;
	border:solid 1px #DCCCF7;
	color:#DCCCF7;
}
.rpd_form fieldset {
background: #EBE5ED;
}
.rpd_form legend {
margin-left:2em;
color: white;
background: #24043A;
padding: 0.2em 1em;
}

.rpd_form .text label {
width: 14em;
float: left;
text-align: right;
padding-top: 0.2em;
margin-right: 0.1em;
margin-bottom: 0.2em;
}
.rpd_form .text input {
margin-left: 0.5em;
margin-top:0.3em;
width:28em;
}

.rpd_form .submit{
text-align:right;
padding-top: 0.7em;
margin-right: 2em;
}

.rpd_form .submit input {
margin-left: 0.5em;
width:auto;
}


.rpd_form .check_box label {
	width:auto;
	margin-left:1em;
}

.rpd_form table {
	margin: 1em;
}
.rpd_form tr{
	border-bottom:1px solid;
}
.nested_rpd_form{
	margin:10px 0;
}
.nested_rpd_form fieldset{
	padding:0 auto;
}
.nested_rpd_form legend {
	margin-left:2em;
	color: black;
	background: none;
	padding: 0.1em 1em;
}
.nested_rpd_form table {
	margin: 0;
}
td.label {
	width: 39em;
	padding: 1em 0 0 0;
}
.right {
	text-align:right;
	padding:0.3em 0.5em 0.3em 0;
}
td.speech_show {
	text-align:right;
	width:13em;
	padding:0.3em 0.5em 0.3em 0;
}

.dates tr{
	height:40px;
}

.dates td{
	min-width: 120px;
}

.dates td.centered{
	font-weight:bold;
	text-align:center;
	table-layout:fixed;
	width:20%;
}


.field_with_errors label {
	color: #E40045;
}

#error_explanation h4{
	color: #E40045;
	margin: 2px 10px;
}

p.error{
	color: #E40045;
}.blue {
	color:#24043A;
}

.red{
	color:#E40045;
	text-decoration:none;
}

.green{
	color:#008000;
	text-decoration:none;
}


.content .main .styled table{
	border-collapse: collapse;
	margin: 10px 0px 0px 0px;
}
.content .main .styled table{
	border: 2px solid black;
	padding: 5px 5px 5px 5px;
}
.content .main .styled th{
	border: 2px solid black;
	padding: 5px 5px 5px 5px;
}
.content .main .styled td{
	border: 2px solid black;
	padding: 5px 5px 5px 5px;
}

!!!
%html
	%head
		%title= title
		= stylesheet_link_tag "application"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		= render 'layouts/header'
		%left_bar
			= render 'layouts/nav'	
		.content
			- if signed_in? 
				= render 'layouts/status_panel'
			%h2.title= @title
			%hr
			- if flash[:notice]
				%p= flash[:notice]
			- if flash[:success]
				%p= flash[:success]
			.main
				= yield
		%footer
			= language_selector

.status_panel
	%b= t(:application_deadline)
	= t(:till) + speech_deadline 
	-# if signed_in?
		- if current_user.speeches == []
			(
			= link_to 'Не отправлена', registration_path, {:class => "red"}
			)
		- else
			(
			= link_to 'Отправлена', speech_path(current_user.speech), {:class => "green"}
			)
	|	
	%b= t(:abstracts_deadline)
	= t(:till) + speech_deadline 
	-# if signed_in?
		- if current_user.speech.nil? || current_user.speech.thesis_url.nil?
			(
			= link_to 'Не отправлены', registration_path, {:class => "red"}
			)
		- else
			(
			= link_to 'Отправлены', speech_path(current_user.speech), {:class => "green"}
			)
-#
	|
	%b Оплата

= form_for(@user) do |f|
  .field
    = f.label :name, "Имя"
    = f.text_field :name
  .field
    = f.label :password, "Пароль"
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Подтверждение пароля"
    = f.password_field :password_confirmation
  .actions
    = f.submit "Зарегистрироваться"
= form_for @speech, :url => { :action => "create_entry_form" } do |f|
	= f.label :title, "Название доклада"
	%p
		= f.text_field :title
	%p
		= f.label :organization, "Название организации"
	%p	
		= f.text_field :organization
	%p
		= f.label :author_name, "ФИО автора (коллектива авторов)"
	%p	
		= f.text_field :author_name
	%p
		= f.label :phone, "Контактный телефон"
	%p
		= f.text_field :phone
	.check_box
		= f.label :delivery_subscription, "Хотите ли вы подписаться на рассылку новостей?"
		%p
			= f.check_box :delivery_subscription
	.submit
		= f.submit "Отправить"

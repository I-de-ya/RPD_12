%p
	.rpd_form
		%fieldset
			%legend= @legend_title
			%table
				%tr
					%td.speech_show
						%B Название доклада:
					%td= @speech.title
				%tr
					%td.speech_show
						%B Организация:
					%td= @speech.organization
				%tr
					%td.speech_show
						%B ФИО авторов:
					%td= @speech.author_name	
				%tr
					%td.speech_show
						%B Контактный телефон:
					%td= @speech.phone
				%tr
					%td.speech_show
						%B Контактный e-mail:
					%td= @speech.user.nil? ? "-" : @speech.user.email
				%tr
					%td.speech_show
						%B Тема:
					%td= @speech.theme.nil? ? '-' : @speech.theme.title
				%tr
					%td.speech_show
						%B Подписка на рассылку новостей:
					%td= @speech.delivery_subscription ? 'Да' : 'Нет'
				%tr
					%td.speech_show
						%B Текст доклада
					%td= link_to File.basename(@speech.thesis_url), @speech.thesis_url
			%p= link_to "Редактировать", edit_speech_path
			%p
			- if current_user.admin?
				= link_to "<< Назад, к списку докладов", speeches_path
